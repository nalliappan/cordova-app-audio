<?xml version='1.0' encoding='utf-8'?>
<widget id="com.exelerus.apps.audioinputdemo" version="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>AudioInputDemo</name>
    <description>
        A sample Apache Cordova application that demonstrates the cordova-plugin-audioinput plugin.
    </description>
    <author email="exelerus.apps@gmail.com" href="https://exelerus.com">
        exelerus
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="./res/icon/android/icon-36x36.png" />
        <icon density="mdpi" src="./res/icon/android/icon-48x48.png" />
        <icon density="hdpi" src="./res/icon/android/icon-72x72.png" />
        <icon density="xhdpi" src="./res/icon/android/icon-96x96.png" />
        <icon density="xxhdpi" src="./res/icon/android/icon-144x144.png" />
        <icon density="xxxhdpi" src="./res/icon/android/icon-196x196.png" />
        <splash density="land-ldpi" src="./res/screen/android/screen-320x200.png" />
        <splash density="land-mdpi" src="./res/screen/android/screen-480x320.png" />
        <splash density="land-hdpi" src="./res/screen/android/screen-800x480.png" />
        <splash density="land-xhdpi" src="./res/screen/android/screen-1280x720.png" />
        <splash density="port-ldpi" src="./res/screen/android/screen-200x320.png" />
        <splash density="port-mdpi" src="./res/screen/android/screen-320x480.png" />
        <splash density="port-hdpi" src="./res/screen/android/screen-480x800.png" />
        <splash density="port-xhdpi" src="./res/screen/android/screen-720x1280.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon src="./res/icon/ios/icon-180x180.png" />
        <icon src="./res/icon/ios/icon-120x120.png" />
        <icon src="./res/icon/ios/icon-60x60.png" />
        <icon src="./res/icon/ios/icon-76x76.png" />
        <icon src="./res/icon/ios/icon-152x152.png" />
        <icon src="./res/icon/ios/icon-40x40.png" />
        <icon src="./res/icon/ios/icon-80x80.png" />
        <icon src="./res/icon/ios/icon-57x57.png" />
        <icon src="./res/icon/ios/icon-114x114.png" />
        <icon src="./res/icon/ios/icon-72x72.png" />
        <icon src="./res/icon/ios/icon-144x144.png" />
        <icon src="./res/icon/ios/icon-167x167.png" />
        <icon src="./res/icon/ios/icon-29x29.png" />
        <icon src="./res/icon/ios/icon-58x58.png" />
        <icon src="./res/icon/ios/icon-50x50.png" />
        <icon src="./res/icon/ios/icon-100x100.png" />
        <icon src="./res/icon/ios/icon-167x167.png" />
        <splash src="./res/screen/ios/screen-320x480.png" />
        <splash src="./res/screen/ios/screen-640x960.png" />
        <splash src="./res/screen/ios/screen-768x1024.png" />
        <splash src="./res/screen/ios/screen-1536x2048.png" />
        <splash src="./res/screen/ios/screen-1024x768.png" />
        <splash src="./res/screen/ios/screen-2048x1536.png" />
        <splash src="./res/screen/ios/screen-640x1136.png" />
        <splash src="./res/screen/ios/screen-750x1334.png" />
        <splash src="./res/screen/ios/screen-1242x2208.png" />
    </platform>
    <plugin name="cordova-plugin-audioinput" spec="^1.0.1" />
    <plugin name="cordova-plugin-file" spec="^6.0.1" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
    <engine name="android" spec="^7.0.0" />
    <engine name="ios" spec="^4.5.4" />
</widget>
